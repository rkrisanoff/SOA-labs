<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence>
    <persistence-unit name="StudyGroupApp">
        <jta-data-source>postgrespool</jta-data-source>
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <properties>
            <property name="hibernate.jpa.compliance.global_id_generators" value="false"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="jakarta.persistence.schema-generation.create-source" value="metadata"/>
            <property name="jakarta.persistence.schema-generation.drop-source" value="metadata"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
        <class>ifmo.drukhary.StudyGroupsApp.entities.CoordinatesEntity</class>
<!--        <class>ifmo.drukhary.StudyGroupsApp.entities.LocationEntity</class>-->
<!--        <class>ifmo.drukhary.StudyGroupsApp.entities.PersonEntity</class>-->
<!--        <class>ifmo.drukhary.StudyGroupsApp.entities.StudyGroupEntity</class>-->
    </persistence-unit>
</persistence>